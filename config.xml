<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bricksimple.matchem" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="scripts/prebuild.js" type="before_prepare" />
    <name>MatchEm</name>
    <description>
        Match Em is a fun but sometimes frustrating game where all you have to do is find matching items.
    </description>
    <author email="tom@bricksimple.com" href="http://bricksimple.com">
        BrickSimple
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon-180.png" platform="ios" width="180" height="180" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
